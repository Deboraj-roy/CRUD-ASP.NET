@* @model IEnumerable<Employee> *@
@model List<Employee>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>Employees List </h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary"> 
            <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Name </th>
            <th> Salary </th>
            <th> Date of Birth </th>
            <th> Department </th>
            <th> Join Date </th>
            <th> Actions </th>
        </tr> 
    </thead>
    <tbody>
        @foreach (var emp in Model.OrderBy(x => x.Salary))
        {
            <tr>
                <td> @emp.Name </td>
                <td> @emp.Salary </td>
                <td> @emp.DateOfBirth.ToString("mm/dd/yyyy") </td>
                <td> @emp.Department </td>
                <td> @emp.JoinDate.ToString("mm/dd/yyyy") </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
